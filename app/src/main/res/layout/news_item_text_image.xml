<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ViewStub
        android:id="@+id/img_news_item_picture"
        android:layout_width="@dimen/x322"
        android:layout_height="@dimen/y242"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/news_item_margin"
        android:layout_marginRight="@dimen/news_item_margin"
        android:layout_marginTop="@dimen/news_item_margin" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/txt_news_item_title"
        android:layout_marginLeft="@dimen/news_item_margin"
        android:layout_marginRight="@dimen/news_item_margin"
        android:layout_marginTop="@dimen/y320"
        android:background="#FFCCCCCC" />

    <TextView
        android:id="@+id/txt_news_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/news_item_margin"
        android:layout_marginRight="@dimen/x405"
        android:layout_marginTop="@dimen/news_item_margin"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/y22"
        android:maxLines="2"
        android:textColor="#FF333333"
        android:textSize="@dimen/y45" />

    <include
        layout="@layout/news_item_status0"
        android:layout_width="@dimen/x720"
        android:layout_height="@dimen/y94"
        android:layout_marginTop="@dimen/y186" />

</FrameLayout>