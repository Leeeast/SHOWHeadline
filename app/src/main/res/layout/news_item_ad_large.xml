<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_news_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/news_item_margin"
        android:layout_marginRight="@dimen/news_item_margin"
        android:layout_marginTop="@dimen/y29"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/y20"
        android:maxLines="2"
        android:textColor="#FF333333"
        android:textSize="@dimen/y45"/>

    <include
        android:id="@+id/img_news_item_picture"
        layout="@layout/venus_simple_drawee_image"
        android:layout_width="@dimen/x1020"
        android:layout_height="@dimen/y573"
        android:layout_marginLeft="@dimen/news_item_margin"
        android:layout_marginTop="@dimen/news_item_margin"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/news_item_margin"
        android:layout_marginRight="@dimen/news_item_margin"
        android:layout_marginTop="@dimen/news_item_margin">

        <TextView
            android:id="@+id/txt_news_item_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#8D8D8D"
            android:textSize="11sp"/>

        <include
            android:id="@+id/img_news_item_picture_source"
            layout="@layout/venus_simple_drawee_image"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x20"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:maxLines="1"
            android:text="广告"
            android:textColor="#8D8D8D"
            android:textSize="11sp"/>

    </FrameLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_marginLeft="@dimen/news_item_margin"
        android:layout_marginRight="@dimen/news_item_margin"
        android:layout_marginTop="@dimen/news_item_margin"
        android:background="#FFCCCCCC"/>
</LinearLayout>
