<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_news_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_12PX"
        android:layout_marginRight="@dimen/DIMEN_12PX"
        android:layout_marginTop="@dimen/DIMEN_8PX"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        android:textColor="#FF333333"
        android:textSize="11sp" />

    <ViewStub
        android:id="@+id/img_news_item_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_130PX"
        android:layout_marginLeft="@dimen/DIMEN_12PX"
        android:layout_marginRight="@dimen/DIMEN_12PX"
        android:layout_marginTop="@dimen/DIMEN_12PX"
        android:scaleType="centerCrop" />

    <include
        android:id="@+id/rl_news_item_info"
        layout="@layout/news_item_status0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_18PX"
        android:layout_marginBottom="@dimen/DIMEN_6PX"
        android:layout_marginLeft="@dimen/DIMEN_12PX"
        android:layout_marginRight="@dimen/DIMEN_12PX"
        android:layout_marginTop="@dimen/DIMEN_7PX" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/DIMEN_12PX"
        android:layout_marginRight="@dimen/DIMEN_12PX"
        android:layout_marginTop="@dimen/DIMEN_5PX"
        android:background="#FFCCCCCC" />

</LinearLayout>
